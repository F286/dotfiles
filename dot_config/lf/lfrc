set hidden true
set preview true
set icons true
set drawbox true
set previewer ~/.config/lf/preview.sh
set cleaner ~/.config/lf/cleaner.sh
set info size
set number true
set relativenumber true
set ratios 1:4:3
set ignorecase true

map <esc> quit
map x cut
map y copy
map p paste
map d delete
map D delete!
map o :touch
map O :mkdir
map i rename
map c rename
map v toggle
map V toggle
map a unselect
map f search
map t search
map gm cd ~/.local/share/chezmoi
map go cd ~/Documents
map gd cd ~/Downloads
map gp cd ~/Projects
map ge cd ~/Desktop
map gv cd ~/.config/Code/User
map gn cd ~/.config/nvim

# Open files in VS Code without quitting lf
cmd open &code -- "$f"

# Make Enter open files/dirs, but Right Arrow only enters directories
map <enter> open
cmd open-dir-only &{{
	if [ -d "$f" ]; then
		lf -remote "send $id open"
	fi
}}
map <right> open-dir-only
