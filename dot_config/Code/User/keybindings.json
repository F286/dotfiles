            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            ]
        }
    },

    // Scroll down 16
    {
    "key": "shift+f6",
    "command": "runCommands",
    "when": "textInputFocus",
    "args": {
            "commands": [
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
            "cursorDown",
            "scrollLineDown",
