// Place your key bindings in this file to override the defaults
[
    {
        "key": "pagedown",
        "command": "runCommands",
        "when": "textInputFocus",
        "args": {
        "commands": [
                "scrollPageDown",
                { "command": "cursorMove", "args": { "to": "viewPortTop", "by": "line" } },
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
                "scrollLineDown",
                "cursorDown",
        ]
        }
    },

    {
        "key": "pageup",
        "command": "runCommands",
        "when": "textInputFocus",
        "args": {
        "commands": [
                "scrollPageUp",
                { "command": "cursorMove", "args": { "to": "viewPortBottom", "by": "line" } },
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
                "scrollLineUp",
                "cursorUp",
        ]
        }
    },

    {
        "key": "shift+f2",
        "command": "workbench.action.tasks.build",
        "when": "taskCommandsRegistered"
    },
    {
        "key": "shift+f3",
        "command": "workbench.action.quickOpen"
    },
    // Scroll up 16
    {
    "key": "shift+f4",
    "command": "runCommands",
    "when": "textInputFocus",
    "args": {
            "commands": [
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
            "cursorUp",
            "scrollLineUp",
