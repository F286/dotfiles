    {
      "label": "FZF Ripgrep",
      "type": "shell",
      "command": "fzf",
      "args": [
        "--disabled",
        "--ansi",
        "--bind",
        "\"start:reload:rg",
        "--column",
        "--color=always",
        "--smart-case",
        "{q}\"",
        "--bind",
        "\"change:reload:rg",
        "--column",
        "--color=always",
        "--smart-case",
        "{q}\"",
        "--delimiter",
        ":",
        "--preview",
        "'bat",
        "--style=numbers",
        "--color=always",
        "--highlight-line",
        "{2}",
        "{1}'",
        "--preview-window",
        "'+{2}/2'",
        "--bind",
        "'enter:execute-silent(code -r -g {1}:{2})'"
      ],
      // "options": {
      //   "env": {
      //     "BAT_PAGER": "less -R"
      //   }
      // },
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
