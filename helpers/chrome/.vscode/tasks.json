{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "chromium: create user data dir",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${config:chromium.userDataDir}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "chromium: build target",
      "type": "shell",
      "command": "autoninja",
      "args": [
        "-C",
        "${workspaceFolder}/${config:chromium.buildDir}",
        "${config:chromium.target}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "chromium: build and prep",
      "dependsOrder": "sequence",
      "dependsOn": [
        "chromium: create user data dir",
        "chromium: build target"
      ]
    },
    {
      "label": "chromium: run browser for attach",
      "type": "shell",
      "command": "${workspaceFolder}/${config:chromium.buildDir}/${config:chromium.runtimeExecutable}",
      "osx": {
        "command": "${workspaceFolder}/${config:chromium.buildDir}/${config:chromium.runtimeExecutableMac}"
      },
      "linux": {
        "command": "${workspaceFolder}/${config:chromium.buildDir}/${config:chromium.runtimeExecutableLinux}"
      },
      "args": [
        "--remote-debugging-port=9222",
        "--user-data-dir=${config:chromium.userDataDir}",
        "--no-first-run",
        "--no-sandbox"
      ],
      "options": {
        "cwd": "${workspaceFolder}/${config:chromium.buildDir}",
        "env": {
          "CHROMIUM_LLDBINIT_SOURCED": "1"
        }
      },
      "presentation": {
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
