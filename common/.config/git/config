[core]
    pager = delta
    fsmonitor = true
    untrackedCache = true
    preloadIndex = true
    commitGraph = true

[interactive]
    diffFilter = delta --color-only

[delta]
  plus-style = "syntax #0f1914"
  minus-style = "syntax #2c1616"
  true-color = always
  navigate = true # use n and N to move between diff sections
  light = false
  hyperlinks = true
  side-by-side = false
  line-numbers = true
  syntax-theme = base16-256

[merge]
    conflictstyle = diff3
    tool = vscode

[mergetool]
    prompt = false

[mergetool "vscode"]
    cmd = code --wait --merge $LOCAL $REMOTE $BASE $MERGED
    trustExitCode = true

[diff]
    colorMoved = default
    tool = vscode
    algorithm = histogram

[difftool]
    prompt = false

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
    prompt = false
    trustExitCode = true

[difftool "nvimdiff"]
    cmd = nvim -f -d "$LOCAL" "$REMOTE"

[mergetool "nvimdiff3"]
    cmd = nvim -f -d "$LOCAL" "$MERGED" "$REMOTE"
    trustExitCode = false

[delta "side-by-side"]
  side-by-side = true
  line-numbers = true
  syntax-theme = base16-256

[pager]
  diff = delta
  show = delta
  log = delta

[index]
    threads = 10

[pack]
    threads = 0

[gc]
    writeCommitGraph = true

[fetch]
    writeCommitGraph = true

[feature]
    manyFiles = true

[maintenance]
    strategy = incremental
