
# Global ripgrep config mirroring common search excludes.
# IMPORTANT: In .ripgreprc every line is a single argv; there's no shell quoting.
# Use --flag=value or put the value on the next line. No quotes. No spaces around '='.

# Exclude compile_commands.json
--glob=!/compile_commands.json

# --- VCS ---
--glob=!.git/
--glob=!.svn/
--glob=!.hg/

# --- IDE / Editor / OS junk ---
--glob=!.idea/
--glob=!.DS_Store
--glob=!.vs/
--glob=!*.swp
--glob=!*.swo
--glob=!*.bak

# --- General build / cache / temp ---
--glob=!out/
--glob=!obj/
--glob=!dist/
--glob=!build/
--glob=!tmp/
--glob=!temp/
--glob=!cache/
--glob=!.cache/
--glob=!logs/
--glob=!*.log
--glob=!*.tmp
--glob=!*.dSYM/    # macOS debug bundles are directories

# --- Node / Frontend ---
--glob=!node_modules/
--glob=!bower_components/
--glob=!jspm_packages/
--glob=!coverage/
--glob=!.next/
--glob=!.nuxt/
--glob=!.svelte-kit/
--glob=!.turbo/
--glob=!.vercel/
--glob=!.cache-loader/

# --- Python ---
--glob=!__pycache__/
--glob=!.mypy_cache/
--glob=!.pytest_cache/
--glob=!.tox/
--glob=!.eggs/
--glob=!*.egg-info
--glob=!*.egg-info/
--glob=!.ipynb_checkpoints/
--glob=!.venv/
--glob=!env/

# --- Java / JVM ---
--glob=!.gradle/
--glob=!.mvn/
--glob=!target/
--glob=!build/classes/
--glob=!build/generated/
--glob=!*.class

# --- PHP / Composer ---
--glob=!vendor/

# --- C / C++ ---
--glob=!CMakeFiles/
--glob=!CMakeCache.txt
--glob=!Default/
--glob=!Debug/
--glob=!Release/
--glob=!*.o
--glob=!*.obj
--glob=!*.exe
--glob=!*.pdb
--glob=!*.ilk

# --- Go ---
--glob=!pkg/
--glob=!bin/

# --- Infra / DevOps ---
--glob=!.terraform/
--glob=!.ansible/
--glob=!.chef/
--glob=!.serverless/

# --- Static Site Generators ---
--glob=!.jekyll-cache/
--glob=!_site/
--glob=!.docusaurus/

# --- Generated / build system artifacts ---
--glob=!gen/
--glob=!*.ninja
--glob=!*.stamp

# --- File types excluded from search ---
--glob=!*.svg
--glob=!*.key
