{
  "name": "overlay-terminals-return",
  "displayName": "Overlay Terminals: Return Focus on Close",
  "version": "0.1.0",
  "publisher": "local",
  "engines": { "vscode": "^1.82.0" },
  "main": "dist/extension.js",
  "activationEvents": [
    "onCommand:overlayTerminals.openProfile",
    "onCommand:overlayTerminals.pickProfile"
  ],
  "contributes": {
    "commands": [
      { "command": "overlayTerminals.openProfile", "title": "Overlay Terminals: Open Profile and Return Focus" },
      { "command": "overlayTerminals.pickProfile",  "title": "Overlay Terminals: Pick Profile and Return Focus" }
    ]
  },
  "scripts": {
    "compile": "tsc -p .",
    "build": "npm run compile",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "package:npx": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.4.0"
  }
}

