#!/usr/bin/env bash
set -e

# Use sudo only if not running as root
if [ "$(id -u)" -eq 0 ]; then
    SUDO=""
else
    SUDO="sudo"
fi

COMMON_APPS=(
{{- include "common_apps.txt" -}}
)

echo "Installing packages using apt..."

# Update apt and install essential build tools and curl
$SUDO apt-get update -y -qq || true
$SUDO apt-get install -y build-essential libc6-dev pkg-config curl ca-certificates || true

# Map package names from common_apps.txt to their apt package names when they differ
declare -A APT_PACKAGE_MAP=(
    [fd]=fd-find
    [delta]=git-delta
    [nvim]=neovim
)

# Build list of apt packages (mapped) and filter to only those available in apt
APT_PACKAGES=()
for pkg in "${COMMON_APPS[@]}"; do
    apt_pkg="${APT_PACKAGE_MAP[$pkg]:-$pkg}"
    APT_PACKAGES+=("$apt_pkg")
done

# Split into available and missing packages to avoid hard failures on unavailable ones (e.g. yazi)
AVAILABLE_PACKAGES=()
MISSING_PACKAGES=()
for pkg in "${APT_PACKAGES[@]}"; do
    if apt-cache show "$pkg" >/dev/null 2>&1; then
        AVAILABLE_PACKAGES+=("$pkg")
    else
        MISSING_PACKAGES+=("$pkg")
    fi
done

# Install zsh and helpful plugins
APT_PACKAGES+=(zsh zsh-autosuggestions zsh-syntax-highlighting)

if [ ${#AVAILABLE_PACKAGES[@]} -gt 0 ]; then
    echo "Installing: ${AVAILABLE_PACKAGES[*]}"
    $SUDO apt-get install -y "${AVAILABLE_PACKAGES[@]}" || true
else
    echo "No mapped packages available via apt to install."
fi

if [ ${#MISSING_PACKAGES[@]} -gt 0 ]; then
    echo "Skipping unavailable packages (not found in apt): ${MISSING_PACKAGES[*]}"
fi

# Install JetBrains Mono font using apt
$SUDO apt-get install -y fonts-jetbrains-mono || true

# Set zsh as the default shell if available
if command -v zsh >/dev/null 2>&1; then
    ZSH_PATH=$(command -v zsh)
    CURRENT_SHELL=$(getent passwd "$USER" | cut -d: -f7)
    if [ "$CURRENT_SHELL" != "$ZSH_PATH" ]; then
        echo "Changing default shell to $ZSH_PATH"
        $SUDO chsh -s "$ZSH_PATH" "$USER" || true
    fi
fi

# Final debug check
echo "=== FINAL DEBUG ==="
for pkg in "${COMMON_APPS[@]}"; do
    echo "which $pkg: $(which "$pkg" 2>/dev/null || echo 'not found')"
    if command -v "$pkg" >/dev/null 2>&1; then
        echo "$pkg version: $("$pkg" --version 2>/dev/null | head -1 || echo 'version not available')"
    fi
done

echo "Linux setup complete using apt!"
